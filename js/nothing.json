{
   "$schema":"https://vega.github.io/schema/vega-lite/v4.json",
   "width":400,
   "height":200,
   "title":"Populations of Australian Cities and Towns",
   "projection":{
      "type":"mercator"
   },
   "layer":[
      {
         "data":{
            "url":"https://monashwillruan.github.io/FIT3179/js/Aus.json",
            "format":{
               "type":"topojson",
               "feature":"custom"
            }
         },
         "mark":{
            "type":"geoshape",
            "fill":"lightgray",
            "stroke":"white"
         }
      },
      {
         "data":{
            "url":"https://monashwillruan.github.io/FIT3179/data/au.csv"
         },
         "params":[
            {
               "name":"Population_Above",
               "value":0,
               "bind":{
                  "input":"population",
                  "min":0,
                  "max":100000000,
                  "step":1000000,
                  "name":"Minimum Population: "
               }
            }
         ],
         "mark":{
            "type":"circle"
         },
         "encoding":{
            "longitude":{
               "field":"longitude",
               "type":"quantitative"
            },
            "latitude":{
               "field":"latitude",
               "type":"quantitative"
            },
            "size":{
               "field":"population",
               "type":"quantitative",
               "scale":{
                  "type":"sqrt"
               }
            },
            "color":{
               "value":"red"
            },
            "tooltip":[
               {
                  "field":"city",
                  "type":"nominal"
               },
               {
                  "field":"population",
                  "type":"quantitative"
               }
            ]
         }
      }
   ]
}
